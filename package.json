{
	"name": "hackmud-color",
	"publisher": "Samual",
	"displayName": "Hackmud Color",
	"description": "Colours text like hackmud",
	"version": "0.3.2",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/samualtnorman/hackmud-color.git"
	},
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:plaintext",
		"onLanguage:javascript",
		"onLanguage:typescript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "hackmud-color.enable",
				"title": "Hackmud Color: Enable"
			},
			{
				"command": "hackmud-color.disable",
				"title": "Hackmud Color: Disable"
			}
		],
		"configuration": {
			"title": "Hackmud Color",
			"properties": {
				"hackmud-color.enabled": {
					"type": "boolean",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.14.5",
		"eslint": "^7.12.1",
		"@typescript-eslint/eslint-plugin": "^4.5.0",
		"@typescript-eslint/parser": "^4.6.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.0",
		"typescript": "^4.0.5",
		"vscode-test": "^1.4.0"
	}
}
