{
	"name": "hackmud-color",
	"publisher": "Samual",
	"displayName": "Hackmud Color",
	"description": "Colours text like hackmud",
	"version": "0.4.1",
	"icon": "images/icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/samualtnorman/hackmud-color/"
	},
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:plaintext",
		"onLanguage:javascript",
		"onLanguage:typescript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "hackmud-color.toggle",
				"title": "Hackmud Color: Toggle"
			},
			{
				"command": "hackmud-color.global-toggle",
				"title": "Hackmud Color: Global Toggle"
			}
		],
		"configuration": {
			"title": "Hackmud Color",
			"properties": {
				"hackmud-color.enabled": {
					"type": "boolean",
					"default": true
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"typescript": "^4.3.5"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^15.14.0",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^4.28.1",
		"@typescript-eslint/parser": "^4.28.1",
		"eslint": "^8.0.0",
		"glob": "^7.1.7",
		"mocha": "^9.0.1",
		"vscode-test": "^1.5.2"
	}
}
